@using EntityLayer.Concrete
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Şehir</th>     
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <th>@item.Name</th>
            <th>@item.City</th>
            <th><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-outline-danger">Sil</a></th>
            <th><a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-outline-success">Güncelle</a></th>
        </tr>
    }
</table>
<a href="/Customer/AddCustomer" class="btn btn-outline-primary">Yeni Müşteri</a>


