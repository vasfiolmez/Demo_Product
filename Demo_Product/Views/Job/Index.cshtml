@using EntityLayer.Concrete
@model List<Job>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Meslek Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.JobID</th>
            <th>@item.Name</th>

            <th><a href="/Job/DeleteJob/@item.JobID" class="btn btn-outline-danger">Sil</a></th>
            <th><a href="/Job/UpdateJob/@item.JobID" class="btn btn-outline-success">Güncelle</a></th>
            <th><a href="/Job/UpdateJob/@item.JobID" class="btn btn-outline-primary">Detaylar</a></th>

        </tr>
    }
</table>

